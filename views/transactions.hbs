<html>
<head>
    <title>Transaction List</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
<h1>This is a list of imported transactions</h1>

{{#if count}}
    <p>Imported {{count}} new transactions</p>
{{else}}
    <p>No new transactions were imported</p>
{{/if}}

<div class="transaction-list">
    <form action="transactions/categorize" method="POST" encType="multipart/form-data">
        <div class="controls">
            <button type="submit">Save</button>
        </div>
        <fieldset name="categories">
        {{#each items}}
            <div class="transaction">
                <span>Date: {{Date}}</span>
                <span>Direction: {{Direction}}</span>
                {{#if In}}
                    <span>Ammount: {{In}}</span>
                {{else}}
                    <span>Ammount: {{Out}}</span>
                {{/if}}
                {{> category_select categories=../categories current=Category transaction=_id}}
            </div>
        {{/each}}
        </fieldset>
    </form>
</div>
</body>
</html>
